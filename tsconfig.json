{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ESNext"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "typeRoots": ["typings/*.d.ts", "node_modules/@types"]
  },
  "compileOnSave": true,
  "include": ["src", "typings/*.d.ts"],
  "exclude": ["node_modules"]
}
